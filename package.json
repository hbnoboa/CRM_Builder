{
  "name": "crm-builder",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "pnpm --filter api dev",
    "dev:admin": "pnpm --filter web-admin dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "pnpm --filter api prisma:generate",
    "db:migrate": "pnpm --filter api prisma:migrate",
    "db:push": "pnpm --filter api prisma:push",
    "db:studio": "pnpm --filter api prisma:studio",
    "db:seed": "pnpm --filter api prisma:seed",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:api": "playwright test e2e/api.spec.ts",
    "test:e2e": "playwright test e2e/app.spec.ts",
    "test:report": "playwright show-report",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["prettier --write"],
    "*.{json,md,yaml,yml,css,scss}": ["prettier --write"]
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.14.0",
    "@types/papaparse": "^5.5.2",
    "lint-staged": "^16.2.7",
    "playwright": "^1.58.1",
    "prettier": "^3.8.1",
    "turbo": "^2.0.0",
    "typescript": "^5.5.0"
  }
}
